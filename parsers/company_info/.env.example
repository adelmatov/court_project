# ════════════════════════════════════════════════════════════════
# DATABASE CONFIGURATION
# ════════════════════════════════════════════════════════════════
# PostgreSQL database connection settings

DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password

# ════════════════════════════════════════════════════════════════
# API CONFIGURATION
# ════════════════════════════════════════════════════════════════
# ba.prg.kz API settings

COMPANY_API_URL=https://apiba.prgapp.kz
API_TIMEOUT=30

# ════════════════════════════════════════════════════════════════
# RATE LIMITING
# ════════════════════════════════════════════════════════════════
# Control request rate to avoid blocking

RATE_LIMIT_RPM=10
MIN_DELAY=6.0
MAX_DELAY=10.0
RETRY_429_DELAY=300

# ════════════════════════════════════════════════════════════════
# RETRY POLICY
# ════════════════════════════════════════════════════════════════
# Retry settings for failed requests

MAX_RETRIES=3

# ════════════════════════════════════════════════════════════════
# PARSING
# ════════════════════════════════════════════════════════════════
# Parser behavior settings

BATCH_SIZE=100
UPDATE_THRESHOLD_DAYS=90

# ════════════════════════════════════════════════════════════════
# LOGGING
# ════════════════════════════════════════════════════════════════
# Logging configuration

LOG_LEVEL=INFO
LOG_FILE=logs/company_parser.log